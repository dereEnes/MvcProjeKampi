@using Entity.Concrete
@Model List<Category>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_adminLayout.cshtml";
    }
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <table class="table table-striped table-dark">
        <tr>
            <th>#</th>
            <th>AD</th>
            <th>AÇIKLAMA</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <th>@category.CategoryId</th>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td>@category.CategoryStatus</td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
                <td><a href="#" class="btn btn-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
            </tr>

        }
    </table>
    <br />
    <a href="/AdminCategory/Insert" class="btn btn-info">Yeni Kategori</a>
